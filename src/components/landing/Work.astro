---
import { projects } from "data/projects";
---

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-x border-white/20 px-8 py-12 gradient-grid">
    <div class="mx-auto">
      <h3 class="text-3xl font-display text-white uppercase">
        Designed and developed by DCISM's very own
      </h3>
    </div>
  </div>
</section>

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-x border-white/20">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
      {projects.map((project, index) => (
        <div class="flex justify-center flex-col group relative">
          <!-- Top Info -->
          <div class="text-white text-xs p-3 text-center border-r border-t border-white/20 last:border-r-0">
            <span class="block font-semibold">{project.title}</span>
            <span class="block text-eagle mt-1">
              by <a href={project.creatorGithubURL} target="_blank" rel="noopener noreferrer" class="underline hover:text-white">{project.creator}</a>
            </span>
          </div>

          <!-- Image with Hover Overlay -->
          <div class="relative">
            <img
              alt={project.title}
              class={`w-full aspect-video object-cover object-center bg-white border-t border-black`}
              src={project.image}
            />
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="absolute inset-0 bg-black/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center text-white text-xs font-semibold text-center p-4"
            >
              Visit: {project.url}
            </a>
          </div>

          <!-- Description -->
          <div class="text-white text-xs p-3 text-center border-r border-white/20 last:border-r-0 border-t">
            <p class="text-eagle text-xs leading-relaxed">{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
