---
import { projects } from "@/data/projects";
---

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-x border-white/20 px-8 py-12 gradient-grid">
    <div class="mx-auto">
      <h3 class="text-3xl font-display text-white uppercase">
        Designed and developed by DCISM's very own
      </h3>
    </div>
  </div>
</section>

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-x border-white/20">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
      {projects.map((project, index) => (
        <div
          class={`flex flex-col group relative border-t border-white/20
            ${(index + 1) % 1 !== 0 ? 'border-r' : ''}
            sm:${(index + 1) % 2 !== 0 ? 'border-r' : ''}
            md:${(index + 1) % 3 !== 0 ? 'border-r' : ''}
            lg:${(index + 1) % 4 !== 0 ? 'border-r' : ''}
            xl:${(index + 1) % 5 !== 0 ? 'border-r' : ''}
          `}
        >
          {/* Top Info */}
          <div class="text-white text-xs p-3 text-center">
            <span class="block font-semibold">{project.title}</span>
            <span class="block text-eagle mt-1">
              by{" "}
              <a
                href={project.creatorGithubURL}
                target="_blank"
                rel="noopener noreferrer"
                class="underline hover:text-white"
              >
                {project.creator}
              </a>
            </span>
          </div>

          {/* Image with Open Graph Aspect Ratio */}
          <div class="relative w-full aspect-[1.91/1] overflow-hidden">
            <img
              alt={project.title}
              src={project.image}
              class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
            />
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="absolute inset-0 bg-black/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center text-white text-xs font-semibold text-center p-4"
            >
              Visit: {project.url}
            </a>
          </div>

          {/* Description */}
          <div class="text-white text-xs p-3 text-center border-t border-white/20">
            <p class="text-eagle text-xs leading-relaxed">{project.description}</p>
          </div>
        </div>
      ))}

      {/* Placeholder Project Card */}
      <div class="flex flex-col group relative border-t border-r border-white/20">
        <div class="text-white text-xs p-3 text-center">
          <span class="block font-semibold italic text-eagle">
            Your project could be here ðŸ˜Ž
          </span>
          <span class="block text-eagle mt-1">
            by You!
          </span>
        </div>
        <div class="relative w-full aspect-[1.91/1] bg-white/10 flex items-center justify-center text-white text-sm font-semibold italic">
          Submit your work!
        </div>
        <div class="text-white text-xs p-3 text-center border-t border-white/20">
          <p class="text-eagle text-xs leading-relaxed italic">
            Want to be featured? Submit your project and inspire others.
          </p>
        </div>
      </div>
     
    </div>
  </div>
</section>
